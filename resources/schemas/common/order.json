{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/common/order.json",
  "title": "Order",
  "description": "An order object",
  "type": "object",
  "properties": {
    "order_id": {
      "type": "integer",
      "description": "Unique identifier for the order"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "cancelled", "completed"],
      "description": "The status of the order"
    },
    "created_date": {
      "type": "string",
      "format": "date-time",
      "description": "The date and time when the order was created"
    },
    "pickup_date": {
      "type": "string",
      "format": "date-time",
      "description": "The date and time when the order will be picked up"
    },
    "client_id": {
      "type": "integer",
      "description": "The client who placed the order"
    },
    "store_id": {
      "type": "integer",
      "description": "The store where the order will be picked up"
    }
  },
  "additionalProperties": false
}
