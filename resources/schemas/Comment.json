{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Comment",
  "type": "object",
  "properties": {
    "comment_id": {
      "type": "integer"
    },
    "text": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000
    },
    "created_date": {
      "type": "string",
      "format": "date-time"
    },
    "parent_comment_id": {
      "type": "integer"
    },
    "user_id": {
      "type": "integer"
    },
    "review_id": {
      "type": "integer"
    }
  },
  "required": [
    "comment_id",
    "text",
    "created_date",
    "user_id"
  ]
}
